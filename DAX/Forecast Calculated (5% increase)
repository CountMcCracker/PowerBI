Forecast Calculated (5% increase) := 
VAR SalesLY =
    CALCULATE (
        [AC],
        ALLEXCEPT ( dimDate, dimDate[Day of Week], dimDate[Fiscal Month], dimDate[Fiscal Week Number] ),
        dimDate[Fiscal Year Number] = MAX ( dimDate[Fiscal Year Number] ) - 1
    )
VAR Sales2YrsAgo =
    CALCULATE (
        [AC],
        ALLEXCEPT ( dimDate, dimDate[Day of Week], dimDate[Fiscal Month], dimDate[Fiscal Week Number] ),
        dimDate[Fiscal Year Number] = MAX ( dimDate[Fiscal Year Number] ) - 2
    )
VAR Sales3YrsAgo =
  CALCULATE (
        [AC],
        ALLEXCEPT ( dimDate, dimDate[Day of Week], dimDate[Fiscal Month], dimDate[Fiscal Week Number] ),
        dimDate[Fiscal Year Number] = MAX ( dimDate[Fiscal Year Number] ) - 3
    )
VAR Factor = 1.05
RETURN
DIVIDE( SalesLY + Sales2YrsAgo + Sales3YrsAgo, 3, 0 ) * Factor