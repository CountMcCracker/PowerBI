FMF Rate = 
VAR currentDate = MAX( dimDate[Date] )
VAR activePlantFrom = MAX( dimPlantLocationChild[Active From Date] )
VAR isNewPlant = SELECTEDVALUE( dimPlantLocationChild[Plant Nm] ) = "COLUMBUS NORTH"
RETURN

IF(
    [ShowLbsForDates],
    IF(
        currentDate < activePlantFrom && isNewPlant,
        BLANK(),
        100 - [Foreign Material Rate]
    ),
    100 - [Foreign Material Rate]
)
