let
    fnMD5Hash = (input as text) as text =>
    let
        // Convert text to binary
        inputBinary = Text.ToBinary(input, TextEncoding.Utf8),

        // Compute MD5 hash (always 16 bytes)
        md5Binary = Binary.Hash(inputBinary, HashAlgorithm.MD5),

        // Convert to hex string (always 32 characters)
        md5Hex = Binary.ToText(md5Binary, BinaryEncoding.Hex)
    in
        md5Hex
in
    fnMD5Hash
